# Database Configuration
DB_HOST=db
DB_USER=bbdms_user
DB_PASS=bbdms_password
DB_NAME=bbdms

# MySQL Root Password
MYSQL_ROOT_PASSWORD=rootpassword

# AWS Region (used by web pod + CLI)
AWS_REGION=us-east-1

# S3 bucket details for uploads synchronisation
AWS_S3_BUCKET=change-me-bucket
AWS_S3_PREFIX=uploads
AWS_SYNC_INTERVAL_SECONDS=60

# Credentials for local testing or non-IRSA clusters
AWS_ACCESS_KEY_ID=YOUR_AWS_ACCESS_KEY_ID
AWS_SECRET_ACCESS_KEY=YOUR_AWS_SECRET_ACCESS_KEY

# Container registry (ECR) image reference
WEB_IMAGE=123456789012.dkr.ecr.us-east-1.amazonaws.com/bbdms-web:latest

# Application URLs (optional)
# APP_URL=http://localhost:8080
# PHPMYADMIN_URL=http://localhost:8081

